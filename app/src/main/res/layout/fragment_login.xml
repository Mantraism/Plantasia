<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" tools:context=".ui.login.LoginFragment">
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginTop="26dp"
            android:id="@+id/tvRegister"
            android:layout_width="32dp"
            android:layout_marginLeft="7dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/baseline_chevron_left_24" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="99dp"
            app:srcCompat="@drawable/sign_in" />

        <TextView
            android:id="@+id/textView7"
            android:text="Username"
            style="@style/style_fontLatoBold" />

        <EditText
            style="@style/style_input"
            android:id="@+id/username1"
            android:drawableStart="@drawable/baseline_person_24"
            android:hint="Type your username" />

        <TextView
            android:id="@+id/emailtext"
            android:text="Email"
            style="@style/style_fontLatoBold" />

        <EditText
            style="@style/style_input"
            android:id="@+id/email1"
            android:drawableStart="@drawable/baseline_person_24"
            android:hint="Type your Email" />

        <TextView
            style="@style/style_fontLatoBold"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/lato_bold"
            android:textSize="18sp"
            android:textColor="@color/black2"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="39dp"
            />

        <EditText
            style="@style/style_input"
            android:id="@+id/password1"
            android:drawableStart="@drawable/baseline_lock_18"
            android:drawableEnd="@drawable/baseline_visibility_off_24"
            android:hint="Type your password"
            android:inputType="textPassword"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_height="30dp"
            android:layout_marginLeft="55dp"
            android:fontFamily="@font/montserrat"
            android:text="Remember Me "
            android:textColor="@color/grey"
            android:textSize="14sp" />



        <Button
            android:id="@+id/btnLogin"
            android:layout_width="330dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="220dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/pt_sans_bold"
            android:text="Sign In"
            android:textSize="18sp" />



    </LinearLayout>
</ScrollView>