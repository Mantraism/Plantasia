<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.StartPage"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="156dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="149dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="204dp"
        android:layout_height="204dp"
        android:background="@drawable/image_plantasia"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="204dp"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="93dp"
        android:layout_marginRight="93dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/lato_bold"
        android:text="Music for your Plant"
        android:textColor="@color/black2"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:text="Warm earth music for plants... \nand the people who love them"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="@color/grey"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="108dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/pt_sans_bold"
        android:text="Sign Up"
        android:textSize="18sp" />
    <LinearLayout android:layout_marginTop="13dp" android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:text="Already have an account?"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loginbtn2"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:text=" Sign In"
            android:clickable="true"
            android:textColor="@color/yellow"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
</ScrollView>