<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" tools:context=".ui.register.RegisterFragment">

        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginTop="26dp"
            android:id="@+id/imageButton"
            android:layout_width="32dp"
            android:layout_marginLeft="7dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/baseline_chevron_left_24" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="99dp"
            app:srcCompat="@drawable/signup" />

        <TextView
            android:id="@+id/textView7"
            android:text="Username"
            style="@style/style_fontLatoBold" />

        <EditText
            android:drawableStart="@drawable/baseline_person_24"
            android:hint="Type your username"
            android:id="@+id/username"
            style="@style/style_input" />

        <TextView
            style="@style/style_fontLatoBold"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/lato_bold"
            android:textSize="18sp"
            android:textColor="@color/black2"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="39dp"
            />

        <EditText
            style="@style/style_input"
            android:drawableStart="@drawable/baseline_email_24"
            android:hint="Type your email"
            android:id="@+id/email"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/lato_bold"
            android:textSize="18sp"
            android:textColor="@color/black2"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="39dp"
            />

        <EditText
            style="@style/style_input"
            android:drawableStart="@drawable/baseline_lock_18"
            android:drawableEnd="@drawable/baseline_visibility_off_24"
            android:hint="Type your password"
            android:id="@+id/password"
            android:inputType="textPassword"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginLeft="69dp"
                android:fontFamily="@font/montserrat"
                android:text="i have read the "
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text=" Privacy Policy"
                android:textColor="@color/yellow"
                android:textSize="14sp" />

        </LinearLayout>
        <Button
            android:id="@+id/button"
            android:layout_width="330dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="94dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/pt_sans_bold"
            android:text="Sign Up"
            android:textSize="18sp" />
        <LinearLayout android:layout_marginTop="13dp" android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:text="Already have an account?"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/loginbtn"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:text=" Sign In"
                android:clickable="true"
                android:textColor="@color/yellow"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>